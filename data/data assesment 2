-- Create table for customers_raw
CREATE TABLE customers_raw (
    customer_id INT,
    email VARCHAR(255),
    phone VARCHAR(50),
    country_code VARCHAR(50),
    updated_at TIMESTAMP,
    created_at TIMESTAMP
);

-- Create table for orders_raw
CREATE TABLE orders_raw (
    order_id INT,
    customer_id INT,
    product_id VARCHAR(50),
    amount NUMERIC(10, 2),
    created_at TIMESTAMP,
    currency VARCHAR(10)
);

-- Create table for products_raw
CREATE TABLE products_raw (
    product_id VARCHAR(50),
    product_name VARCHAR(255),
    category VARCHAR(255),
    active_flag CHAR(1)
);

-- Create table for country_dim
CREATE TABLE country_dim (
    country_name VARCHAR(255),
    iso_code VARCHAR(10)
);

